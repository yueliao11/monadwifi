{
  "name": "monadwifi-simple",
  "version": "1.0.0",
  "description": "基于Monad测试网的Web3支付应用",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "typecheck": "vue-tsc --noEmit",
    "compile": "npx hardhat compile",
    "deploy:monad": "npx hardhat run scripts/deploy-production.js --network monadTestnet",
    "deploy:wifi": "npx hardhat run scripts/deploy-wifi-contract.js --network monadTestnet",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "fund:contract": "npx hardhat run scripts/fund-contract.js --network monadTestnet",
    "check:contract": "npx hardhat run scripts/simple-check.js --network monadTestnet",
    "analyze:wallet": "npx hardhat run scripts/analyze-requirements.js --network monadTestnet",
    "verify:contract": "npx hardhat run scripts/verify-contract.js --network monadTestnet",
    "test:wallet": "node scripts/test-wallet-connection.js",
    "node": "npx hardhat node",
    "test": "npx hardhat test"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "ethers": "^6.7.1",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.45.0",
    "eslint-plugin-vue": "^9.17.0",
    "hardhat": "^2.19.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.5"
  },
  "keywords": [
    "vue",
    "web3",
    "monad",
    "blockchain",
    "payment",
    "depin",
    "wifi"
  ],
  "author": "",
  "license": "MIT"
}
